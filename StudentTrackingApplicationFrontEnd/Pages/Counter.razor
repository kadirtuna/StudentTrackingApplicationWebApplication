@page "/counter"
@attribute [Authorize]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p></p>

<AuthorizeView Roles = "Admin, Teacher">
    <Authorized>
        <span>Enjoy everything with Counter Page! as @context.User.Identity.Name</span>
    </Authorized>
    <NotAuthorized>
        <span>You're not logged in and not allowed to see Counter Page!</span>
    </NotAuthorized>
</AuthorizeView>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
